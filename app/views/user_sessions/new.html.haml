.row
  .twelve.columns
    = form_tag user_sessions_path, method: :post do
      .field
        = label_tag :username
        = text_field_tag :username, "", class: "input"
      .field
        = label_tag :password
        = password_field_tag :password, "", class: "input"
      .actions
        .medium.primary.btn
          = submit_tag "Login"
