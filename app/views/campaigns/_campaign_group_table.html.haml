%table{style: "width:100%"}
  %thead
    %tr
      %th{width: 500} Nom
      %th{width: 150} Nombre de PNJ
      %th Actions
  %tbody
    - @campaign.npc_groups.each do |npc_group|
      %tr
        %td= link_to npc_group.name, npc_group_path(npc_group)
        %td= npc_group.npcs.count
        %td
          = link_to "Modifier", edit_npc_group_path(npc_group)
          |
          = link_to "Supprimer", npc_group_path(npc_group), method: :delete, confirm: "Êtes-vous sûr(e) de vouloir supprimer ce groupe ?"
%p= link_to "Nouveau groupe de PNJ", new_npc_group_path(campaign_id: @campaign.id), class: "button success"
